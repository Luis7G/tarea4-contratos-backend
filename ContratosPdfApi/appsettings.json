{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ContratosPdfApi": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // SQL Server para desarrollo local
    "DefaultConnection": "Server=localhost;Database=ContratosDB;Trusted_Connection=true;TrustServerCertificate=true;",
    // PostgreSQL para Render (se sobreescribe con variable de entorno)
    "PostgreSQLConnection": "Host=localhost;Database=ContratosDB;Username=postgres;Password=yourpassword;Port=5432;SSL Mode=Prefer;Trust Server Certificate=true;"
  },
  "DatabaseProvider": "SqlServer", // "SqlServer" o "PostgreSQL"
  "PdfSettings": {
    "PdfLibrary": "DinkToPdf"
  },
  "FileStorage": {
    "BasePath": "Uploads",
    "MaxFileSize": 10485760,
    "AllowedExtensions": [
      ".pdf",
      ".jpg",
      ".jpeg",
      ".png",
      ".xlsx",
      ".docx"
    ],
    "ContratosFolders": {
      "BIENES": "Contratos/Bienes",
      "SERVICIOS": "Contratos/Servicios",
      "OBRAS": "Contratos/Obras",
      "CONSULTORIA": "Contratos/Consultoria"
    }
  },
  "TempFileSettings": {
    "MaxAgeHours": 2,
    "CleanupIntervalMinutes": 10
  }
}